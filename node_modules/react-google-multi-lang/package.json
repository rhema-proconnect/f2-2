{
    "name": "react-google-multi-lang",
    "version": "1.0.7",
    "description": "A library to support multi-language translation in React apps using Google Translation API.",
    "main": "dist/index.js",
    "types": "index.d.ts",
    "scripts": {
      "build": "NODE_ENV=production babel src --out-dir dist",
      "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
      "prettify": "prettier --write 'src/**/*.{js,jsx,ts,tsx,json,css,md}'",
      "prepare": "npm run build",
      "prepublishOnly": "npm run prettify && npm run build",
      "test": "echo \"Error: no test specified\" && exit 1"
    },
    "repository": {
      "type": "git",
      "url": "https://github.com/bonifacemwanza/react-google-multi-lang.git"
    },
    "bugs": {
      "url": "https://github.com/bonifacemwanza/react-google-multi-lang/issues"
    },
    "homepage": "https://github.com/bonifacemwanza/react-google-multi-lang#readme",
    "keywords": [
      "react",
      "translation",
      "google-translate",
      "multi-language",
      "javascript"
    ],
    "author": "Boniface Mwanza",
    "license": "MIT",
    "dependencies": {
      "axios": "^0.27.2",
      "dotenv": "^16.4.5"
    },
    "devDependencies": {
      "@babel/cli": "^7.14.5",
      "@babel/core": "^7.14.6",
      "@babel/preset-env": "^7.14.7",
      "@babel/preset-react": "^7.14.5",
      "@typescript-eslint/eslint-plugin": "^5.57.1",
      "@typescript-eslint/parser": "^5.57.1",
      "babel-preset-minify": "^0.5.2",
      "eslint": "^8.57.0",
      "eslint-config-prettier": "^8.10.0",
      "eslint-plugin-prettier": "^4.2.1",
      "prettier": "^2.8.8"
    },
    "peerDependencies": {
      "react": "^18.2.0",
      "react-dom": "^18.2.0"
    }
  }
  
